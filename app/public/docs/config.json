{
  "swagger": "2.0",
  "info": {
    "description": "Lovemail 的 API 文档",
    "version": "1.0.0",
    "title": "Lovemail API",
    "contact": {
      "email": "xizhouh@gmail.com"
    },
    "license": {
      "name": "Apache 2.0",
      "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
    }
  },
  "host": "api.lovemail.site",
  "schemes": [
    "https"
  ],
  "basePath": "/v1",
  "produces": [
    "application/json"
  ],
  "paths": {
    "/signup": {
      "post": {
        "tags": [
          "鉴权"
        ],
        "summary": "注册",
        "description": "发送验证邮件和提示信息",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "required": [
                "email",
                "password",
                "code"
              ],
              "properties": {
                "email": {
                  "type": "string",
                  "example": "xxx@xxx.com",
                  "description": "用户邮箱"
                },
                "password": {
                  "type": "string",
                  "example": "xxxx",
                  "description": "用户密码（4 - 20位）"
                },
                "code": {
                  "type": "string",
                  "example": "xxxxxxxxxx",
                  "description": "验证码"
                }
              }
            }
          }
        ],
        "responses": {
          "201": {
            "description": "注册成功",
            "schema": {
              "$ref": "#/definitions/Msg"
            }
          },
          "409": {
            "description": "邮箱已占用",
            "schema": {
              "$ref": "#/definitions/Msg"
            }
          },
          "500": {
            "description": "服务器未知错误",
            "schema": {
              "$ref": "#/definitions/Msg"
            }
          }
        }
      }
    },
    "/signin": {
      "post": {
        "tags": [
          "鉴权"
        ],
        "summary": "登录",
        "description": "返回 accessToken 和提示信息",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "required": [
                "email",
                "password"
              ],
              "properties": {
                "email": {
                  "type": "string",
                  "example": "xxx@xxx.com",
                  "description": "用户邮箱"
                },
                "password": {
                  "type": "string",
                  "example": "xxxx",
                  "description": "用户密码（4 - 20位）"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "登录成功",
            "schema": {
              "properties": {
                "msg": {
                  "type": "string",
                  "description": "提示信息"
                },
                "data": {
                  "type": "object",
                  "properties": {
                    "accessToken": {
                      "type": "string",
                      "description": "accessToken"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "鉴权错误",
            "schema": {
              "$ref": "#/definitions/Msg"
            }
          },
          "500": {
            "description": "服务器未知错误",
            "schema": {
              "$ref": "#/definitions/Msg"
            }
          }
        }
      }
    },
    "/email/validate": {
      "post": {
        "tags": [
          "鉴权"
        ],
        "summary": "发送验证邮件（100 秒间隔限制发送）",
        "description": "返回提示信息",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "required": [
                "email",
                "type"
              ],
              "properties": {
                "email": {
                  "type": "string",
                  "example": "xxx@xxx.com",
                  "description": "用户邮箱"
                },
                "type": {
                  "type": "string",
                  "example": "SIGNUP",
                  "description": "验证邮件类型（'SIGNUP'：注册验证邮件 | 'RESET'：重置密码验证邮件）"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "验证邮件发送成功",
            "schema": {
              "$ref": "#/definitions/Msg"
            }
          },
          "500": {
            "description": "服务器未知错误 || 频繁发送",
            "schema": {
              "$ref": "#/definitions/Msg"
            }
          }
        }
      }
    },
    "/user/reset": {
      "post": {
        "tags": [
          "用户"
        ],
        "summary": "重置密码",
        "description": "返回提示信息",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "required": [
                "email",
                "password",
                "code"
              ],
              "properties": {
                "email": {
                  "type": "string",
                  "example": "xxx@xxx.com",
                  "description": "用户邮箱"
                },
                "password": {
                  "type": "string",
                  "example": "xxxx",
                  "description": "用户密码（4 - 20位）"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "密码重置成功",
            "schema": {
              "$ref": "#/definitions/Msg"
            }
          },
          "401": {
            "description": "鉴权错误",
            "schema": {
              "$ref": "#/definitions/Msg"
            }
          },
          "404": {
            "description": "用户未注册",
            "schema": {
              "$ref": "#/definitions/Msg"
            }
          },
          "500": {
            "description": "服务器未知错误",
            "schema": {
              "$ref": "#/definitions/Msg"
            }
          }
        }
      }
    },
    "/city/all": {
      "get": {
        "tags": [
          "城市列表"
        ],
        "summary": "获取支持天气的城市列表",
        "description": "返回城市列表",
        "parameters": [
          {
            "name": "Authorization",
            "in": "header",
            "required": true,
            "description": "AccessToken",
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "获取城市列表成功",
            "schema": {
              "properties": {
                "msg": {
                  "type": "string",
                  "description": "提示信息"
                },
                "data": {
                  "type": "object",
                  "properties": {
                    "count": {
                      "type": "number",
                      "description": "城市数量"
                    },
                    "content": {
                      "type": "array",
                      "items": {
                        "type": "string",
                        "description": "城市名"
                      }
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "服务器未知错误",
            "schema": {
              "$ref": "#/definitions/Msg"
            }
          }
        }
      }
    }
  },
  "definitions": {
    "Msg": {
      "type": "object",
      "required": [
        "msg"
      ],
      "properties": {
        "msg": {
          "type": "string",
          "description": "文本信息"
        }
      }
    }
  }
}