{
  "swagger": "2.0",
  "info": {
    "description": "Lovemail 的 API 文档",
    "version": "1.0.0",
    "title": "Lovemail API",
    "contact": {
      "email": "xizhouh@gmail.com"
    },
    "license": {
      "name": "Apache 2.0",
      "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
    }
  },
  "host": "api.lovemail.site",
  "schemes": [
    "https"
  ],
  "basePath": "/v1",
  "produces": [
    "application/json"
  ],
  "paths": {
    "/signup": {
      "post": {
        "tags": [
          "鉴权"
        ],
        "summary": "注册",
        "description": "发送验证邮件和提示信息",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "required": [
                "email",
                "password",
                "code"
              ],
              "properties": {
                "email": {
                  "type": "string",
                  "example": "xxx@xxx.com",
                  "description": "用户邮箱"
                },
                "password": {
                  "type": "string",
                  "example": "xxxx",
                  "description": "用户密码（4 - 20位）"
                },
                "code": {
                  "type": "string",
                  "example": "xxxxxxxxxx",
                  "description": "验证码"
                }
              }
            }
          }
        ],
        "responses": {
          "201": {
            "description": "注册成功",
            "schema": {
              "$ref": "#/definitions/Msg"
            }
          },
          "500": {
            "description": "服务器未知错误",
            "schema": {
              "$ref": "#/definitions/Msg"
            }
          }
        }
      }
    },
    "/signin": {
      "post": {
        "tags": [
          "鉴权"
        ],
        "summary": "登录",
        "description": "返回 accessToken 和提示信息",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "required": [
                "email",
                "password"
              ],
              "properties": {
                "email": {
                  "type": "string",
                  "example": "xxx@xxx.com",
                  "description": "用户邮箱"
                },
                "password": {
                  "type": "string",
                  "example": "xxxx",
                  "description": "用户密码（4 - 20位）"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "登录成功",
            "schema": {
              "properties": {
                "msg": {
                  "type": "string",
                  "description": "提示信息"
                },
                "data": {
                  "type": "object",
                  "properties": {
                    "accessToken": {
                      "type": "string",
                      "description": "accessToken"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "鉴权错误",
            "schema": {
              "$ref": "#/definitions/Msg"
            }
          },
          "500": {
            "description": "服务器未知错误",
            "schema": {
              "$ref": "#/definitions/Msg"
            }
          }
        }
      }
    },
    "/email/validate": {
      "post": {
        "tags": [
          "鉴权"
        ],
        "summary": "发送验证邮件（100 秒间隔限制发送）",
        "description": "返回提示信息",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "required": [
                "email",
                "type"
              ],
              "properties": {
                "email": {
                  "type": "string",
                  "example": "xxx@xxx.com",
                  "description": "用户邮箱"
                },
                "type": {
                  "type": "string",
                  "example": "SIGNUP",
                  "description": "验证邮件类型（'SIGNUP'：注册验证邮件 | 'RESET'：重置密码验证邮件）"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "验证邮件发送成功",
            "schema": {
              "$ref": "#/definitions/Msg"
            }
          },
          "409": {
            "description": "邮箱已占用",
            "schema": {
              "$ref": "#/definitions/Msg"
            }
          },
          "500": {
            "description": "服务器未知错误 || 频繁发送",
            "schema": {
              "$ref": "#/definitions/Msg"
            }
          }
        }
      }
    },
    "/user": {
      "get": {
        "tags": [
          "用户"
        ],
        "summary": "获取用户信息",
        "description": "返回用户信息",
        "parameters": [
          {
            "name": "Authorization",
            "in": "header",
            "required": true,
            "description": "AccessToken",
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "获取用户信息成功",
            "schema": {
              "properties": {
                "msg": {
                  "type": "string",
                  "description": "提示信息"
                },
                "data": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string",
                      "description": "用户 ID"
                    },
                    "email": {
                      "type": "string",
                      "description": "用户邮箱"
                    },
                    "nickname": {
                      "type": "string",
                      "description": "用户昵称"
                    },
                    "love_email": {
                      "type": "string",
                      "description": "对象邮箱"
                    },
                    "love_time": {
                      "type": "string",
                      "description": "发送时间"
                    },
                    "love_date": {
                      "type": "string",
                      "description": "在一起日期"
                    },
                    "love_city": {
                      "type": "string",
                      "description": "对象所在城市"
                    },
                    "love_color": {
                      "type": "string",
                      "description": "邮件主题色"
                    },
                    "love_temp": {
                      "type": "string",
                      "description": "所选模板"
                    },
                    "isStart": {
                      "type": "boolean",
                      "description": "是否启动服务"
                    },
                    "created_at": {
                      "type": "string",
                      "description": "账号创建时间"
                    },
                    "updated_at": {
                      "type": "string",
                      "description": "账号更新时间"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "鉴权错误",
            "schema": {
              "$ref": "#/definitions/Msg"
            }
          },
          "500": {
            "description": "服务器未知错误",
            "schema": {
              "$ref": "#/definitions/Msg"
            }
          }
        }
      }
    },
    "/user/reset": {
      "patch": {
        "tags": [
          "用户"
        ],
        "summary": "重置密码",
        "description": "返回提示信息",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "required": [
                "email",
                "password",
                "code"
              ],
              "properties": {
                "email": {
                  "type": "string",
                  "example": "xxx@xxx.com",
                  "description": "用户邮箱"
                },
                "password": {
                  "type": "string",
                  "example": "xxxx",
                  "description": "用户密码（4 - 20位）"
                },
                "code": {
                  "type": "string",
                  "example": "xxxxxxxxxx",
                  "description": "验证码"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "密码重置成功",
            "schema": {
              "$ref": "#/definitions/Msg"
            }
          },
          "401": {
            "description": "鉴权错误",
            "schema": {
              "$ref": "#/definitions/Msg"
            }
          },
          "404": {
            "description": "用户未注册",
            "schema": {
              "$ref": "#/definitions/Msg"
            }
          },
          "500": {
            "description": "服务器未知错误",
            "schema": {
              "$ref": "#/definitions/Msg"
            }
          }
        }
      }
    },
    "/lovemail/setting": {
      "post": {
        "tags": [
          "用户"
        ],
        "summary": "保存对象邮箱推送设置（对象邮箱设置 24 小时间隔）",
        "description": "返回提示信息",
        "parameters": [
          {
            "name": "Authorization",
            "in": "header",
            "required": true,
            "description": "AccessToken",
            "type": "string"
          },
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "required": [
                "love_email",
                "love_time",
                "love_date",
                "love_color",
                "love_temp",
                "isStart"
              ],
              "properties": {
                "nickname": {
                  "type": "string",
                  "example": "观音菩萨",
                  "description": "用户昵称（显示在邮件内，如没有则不传此字段，显示匿名）"
                },
                "love_email": {
                  "type": "string",
                  "example": "xxx@xxx.com",
                  "description": "对象邮箱"
                },
                "love_time": {
                  "type": "string",
                  "example": "7:00",
                  "description": "发件时间（暂定均为 7:00）"
                },
                "love_date": {
                  "type": "string",
                  "example": "2018-01-01",
                  "description": "在一起时间（YYYY-MM-DD）"
                },
                "love_city": {
                  "type": "string",
                  "example": "南昌",
                  "description": "对象所在城市名（从城市列表获取，如没有则不传此字段）"
                },
                "love_color": {
                  "type": "string",
                  "example": "#EFEFEF",
                  "description": "邮件主题颜色"
                },
                "love_temp": {
                  "type": "string",
                  "example": "one",
                  "description": "邮件模板名称（one，essay，movie，music）"
                },
                "isStart": {
                  "type": "boolean",
                  "example": true,
                  "description": "是否执行发送"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "设置成功",
            "schema": {
              "$ref": "#/definitions/Msg"
            }
          },
          "409": {
            "description": "邮箱已占用",
            "schema": {
              "$ref": "#/definitions/Msg"
            }
          },
          "500": {
            "description": "服务器未知错误 || 频繁设置对象邮箱",
            "schema": {
              "$ref": "#/definitions/Msg"
            }
          }
        }
      },
      "patch": {
        "tags": [
          "用户"
        ],
        "summary": "更新对象邮箱推送设置（对象邮箱设置 24 小时间隔）",
        "description": "返回提示信息",
        "parameters": [
          {
            "name": "Authorization",
            "in": "header",
            "required": true,
            "description": "AccessToken",
            "type": "string"
          },
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "properties": {
                "nickname": {
                  "type": "string",
                  "example": "观音菩萨",
                  "description": "用户昵称（显示在邮件内，如没有则不传此字段，显示匿名）"
                },
                "love_email": {
                  "type": "string",
                  "example": "xxx@xxx.com",
                  "description": "对象邮箱"
                },
                "love_time": {
                  "type": "string",
                  "example": "7:00",
                  "description": "发件时间（暂定均为 7:00）"
                },
                "love_date": {
                  "type": "string",
                  "example": "2018-01-01",
                  "description": "在一起时间（YYYY-MM-DD）"
                },
                "love_city": {
                  "type": "string",
                  "example": "南昌",
                  "description": "对象所在城市名（从城市列表获取，如没有则不传此字段）"
                },
                "love_color": {
                  "type": "string",
                  "example": "#EFEFEF",
                  "description": "邮件主题颜色"
                },
                "love_temp": {
                  "type": "string",
                  "example": "one",
                  "description": "邮件模板名称（one，essay，movie，music）"
                },
                "isStart": {
                  "type": "boolean",
                  "example": true,
                  "description": "是否执行发送"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "设置成功",
            "schema": {
              "$ref": "#/definitions/Msg"
            }
          },
          "409": {
            "description": "邮箱已占用",
            "schema": {
              "$ref": "#/definitions/Msg"
            }
          },
          "500": {
            "description": "服务器未知错误 || 频繁设置对象邮箱",
            "schema": {
              "$ref": "#/definitions/Msg"
            }
          }
        }
      }
    },
    "/lovemail/untie": {
      "patch": {
        "tags": [
          "用户"
        ],
        "summary": "解绑对象邮箱（解绑后有 24 小时频率限制）",
        "description": "返回提示信息",
        "parameters": [
          {
            "name": "Authorization",
            "in": "header",
            "required": true,
            "description": "AccessToken",
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "对象邮箱解绑成功",
            "schema": {
              "$ref": "#/definitions/Msg"
            }
          },
          "500": {
            "description": "服务器未知错误",
            "schema": {
              "$ref": "#/definitions/Msg"
            }
          }
        }
      }
    },
    "/temp/all": {
      "get": {
        "tags": [
          "模板列表"
        ],
        "summary": "获取全部模板",
        "description": "返回模板列表",
        "responses": {
          "200": {
            "description": "获取模板列表成功",
            "schema": {
              "properties": {
                "msg": {
                  "type": "string",
                  "description": "提示信息"
                },
                "data": {
                  "type": "object",
                  "properties": {
                    "count": {
                      "type": "number",
                      "description": "模板数量"
                    },
                    "rows": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "id": {
                            "type": "string",
                            "description": "模板 ID"
                          },
                          "tempName": {
                            "type": "string",
                            "description": "模板名"
                          },
                          "tempDemo": {
                            "type": "string",
                            "description": "模板样本图片 url"
                          },
                          "created_at": {
                            "type": "string",
                            "description": "创建时间"
                          },
                          "updated_at": {
                            "type": "string",
                            "description": "更新时间"
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "服务器未知错误",
            "schema": {
              "$ref": "#/definitions/Msg"
            }
          }
        }
      }
    },
    "/city/all": {
      "get": {
        "tags": [
          "城市列表"
        ],
        "summary": "获取支持天气的城市列表",
        "description": "返回城市列表",
        "parameters": [
          {
            "name": "Authorization",
            "in": "header",
            "required": true,
            "description": "AccessToken",
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "获取城市列表成功",
            "schema": {
              "properties": {
                "msg": {
                  "type": "string",
                  "description": "提示信息"
                },
                "data": {
                  "type": "object",
                  "properties": {
                    "count": {
                      "type": "number",
                      "description": "城市数量"
                    },
                    "rows": {
                      "type": "array",
                      "items": {
                        "type": "string",
                        "description": "城市名"
                      }
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "服务器未知错误",
            "schema": {
              "$ref": "#/definitions/Msg"
            }
          }
        }
      }
    }
  },
  "definitions": {
    "Msg": {
      "type": "object",
      "required": [
        "msg"
      ],
      "properties": {
        "msg": {
          "type": "string",
          "description": "文本信息"
        }
      }
    }
  }
}